    <PreferenceCategory android:title="@string/libraries_base" >
        <Preference
            android:summary="@string/libraries_jsoup_2"
            android:title="@string/libraries_jsoup_1" android:icon="@drawable/logo_jsoup"/>
        <Preference
            android:summary="@string/libraries_holoeverywhere_2"
            android:title="@string/libraries_holoeverywhere_1" android:icon="@drawable/logo_holoeverywhere"/>
        <Preference
            android:summary="@string/libraries_pulltorefresh_2"
            android:title="@string/libraries_pulltorefresh_1" android:icon="@drawable/logo_pulltorefresh"/>
        <Preference
            android:summary="@string/libraries_smoothprogressbar_2"
            android:title="@string/libraries_smoothprogressbar_1" android:icon="@drawable/logo_smoothprogressbar"/>
    </PreferenceCategory>

</PreferenceScreen>