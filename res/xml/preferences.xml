<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:holo="http://schemas.android.com/apk/res-auto" >

    <PreferenceCategory android:title="@string/preference_base" >
        <DatePreference
            android:id="@+id/preference_date_born"
            android:icon="@drawable/ic_icon_settings_date_born"
            android:key="preference_date_born"
            android:summary="@string/preference_date_2"
            android:title="@string/preference_date_1" />

        <Preference
            android:id="@+id/preference_zodiac_sign"
            android:icon="@drawable/ic_icon_settings_sign"
            android:key="preference_zodiac_sign"
            android:summary="@string/preference_zodiac_signs_2"
            android:title="@string/preference_zodiac_signs_1" />
        <Preference
            android:id="@+id/preference_locale"
            android:icon="@drawable/ic_icon_settings_language"
            android:key="preference_locales"
            android:summary="@string/preference_locale_2"
            android:title="@string/preference_locale_1" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_notifications" >
        <CheckBoxPreference
            android:id="@+id/preference_show_notifications"
            android:defaultValue="true"
            android:key="preference_show_notifications"
            android:title="@string/preference_notifications_1" />

        <TimePreference
            android:id="@+id/preference_show_notifications_time"
            android:key="preference_show_notifications_time"
            android:title="@string/preference_notifications_2" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_ad" >
        <Preference
            android:id="@+id/preference_ad_about"
            android:key="preference_ad_about"
            android:title="@string/preference_ad_about" />
        <Preference
            android:id="@+id/preference_ad_disabler"
            android:key="preference_ad_disabler"
            android:title="@string/preference_ad_disable" />
    </PreferenceCategory>

</PreferenceScreen>