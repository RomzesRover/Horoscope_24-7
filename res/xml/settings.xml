<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:holo="http://schemas.android.com/apk/res-auto"
    android:key="preference_screen" >

    <PreferenceCategory android:title="@string/preference_base" >
        <DatePreference
            android:id="@+id/preference_date_born"
            android:icon="@drawable/ic_icon_settings_date_born"
            android:key="preference_date_born"
            android:title="@string/preference_date_1" />
        <Preference
            android:id="@+id/preference_zodiac_sign"
            android:icon="@drawable/ic_icon_settings_sign"
            android:key="preference_zodiac_sign"
            android:title="@string/preference_zodiac_sign_1" />
        <Preference
            android:id="@+id/preference_language"
            android:icon="@drawable/ic_icon_settings_language"
            android:key="preference_language"
            android:title="@string/preference_language_1" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_appearance" >
        <Preference
            android:id="@+id/preference_text_size"
            android:icon="@drawable/ic_icon_settings_text_size"
            android:key="preference_text_size"
            android:title="@string/preference_text_size" />
        <Preference
            android:id="@+id/preference_background_text_color"
            android:icon="@drawable/ic_icon_settings_background_text_color"
            android:key="preference_background_text_color"
            android:title="@string/preference_background_text_color" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_notifications" >
        <CheckBoxPreference
            android:id="@+id/preference_show_notifications"
            android:defaultValue="true"
            android:key="preference_show_notifications"
            android:title="@string/preference_show_notification_1"
            android:widgetLayout="@layout/preference_widget_checkbox_custom" android:summary="@string/preference_show_notification_2"/>
        <TimePreference
            android:id="@+id/preference_show_notifications_time"
            android:key="preference_show_notifications_time"
            android:defaultValue="08:00"
            android:summary="08:00"
            android:title="@string/preference_time_1" />
    </PreferenceCategory>
</PreferenceScreen>