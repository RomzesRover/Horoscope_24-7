<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hexography_green" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/introduce_two_1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/not_simple_white_color" />

        <Spinner
            android:id="@+id/spinnerLocale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fragment_standart_padding"
            android:layout_marginLeft="@dimen/intro_def_padd2"
            android:layout_marginRight="@dimen/intro_def_padd2"
            android:layout_marginTop="@dimen/fragment_standart_padding"
            android:entries="@array/locales"
            android:entryValues="@array/locales_entryValues"
            android:textColor="@color/not_simple_white_color" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="@string/introduce_two"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/simple_white_color"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fragment_standart_padding"
            android:layout_marginLeft="@dimen/intro_def_padd"
            android:layout_marginRight="@dimen/intro_def_padd" >

            <Button
                android:id="@+id/buttonBack"
                android:textStyle="italic" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_standart_padding"
                android:background="@drawable/list_selector_holo_dark"
                android:text="@string/introduce_exit" />

            <Button
                android:id="@+id/buttonNext"
                android:textStyle="italic" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_holo_dark"
                android:padding="@dimen/fragment_standart_padding"
                android:text="@string/introduce_next" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_above="@+id/linearLayout1"
            android:layout_marginBottom="3dp"
            android:src="@color/slider_menu_custom_text_color" />

        <TextView
            android:id="@+id/textAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/fragment_standart_padding"
            android:text="@string/clickable_string"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/simple_white_color"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/intro_def_padd"
            android:layout_marginRight="@dimen/intro_def_padd"  />

    </RelativeLayout>

</RelativeLayout>