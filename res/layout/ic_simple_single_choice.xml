<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slider_menu_selector"
    android:gravity="center_vertical"
    android:minHeight="?listPreferredItemHeightSmall"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart" >

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioButton1"
        android:layout_toLeftOf="@+id/radioButton1"
        android:ellipsize="end"
        android:textSize="@dimen/dialog_content_margin_text_size_title"
        android:lines="1"
        android:singleLine="true"
        android:textAppearance="?textAppearanceListItemSmall" />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:button="@drawable/check_box_to_custom_switch"
        android:layout_alignParentRight="true" />

</RelativeLayout>