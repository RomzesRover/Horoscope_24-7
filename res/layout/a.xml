<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_updte_widget"
    android:orientation="vertical"
    android:padding="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background_element_list"
        android:drawingCacheQuality="high"
        android:orientation="vertical"
        android:padding="0.5dp" >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/abs__ab_stacked_transparent_light_holo" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:text="@string/noname"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#222"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#444"
                    android:textSize="15sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/selector_updte_widget"
                android:src="@drawable/ic_menu_refresh" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/openFull"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top"
            android:background="@drawable/background_holo_light" >

            <TextView
                android:id="@+id/resDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:text="@string/loading"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#222"
                android:textSize="15sp" />

        </RelativeLayout>

        

    </RelativeLayout>

</LinearLayout>