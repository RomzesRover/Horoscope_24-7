<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/intro_main_text"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:text="@string/introduce_slogan"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/intro_second_text"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:id="@+id/mainIntroLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/intro_main_text"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/subTitle_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/introduce_slogan"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/intro_second_text"
                android:textSize="15sp" />

            <Button
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/loader_buttons_margin"
                android:layout_marginRight="@dimen/loader_buttons_margin"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_custom_half"
                android:drawableLeft="@drawable/ic_icon_settings_language"
                android:ellipsize="end"
                android:paddingLeft="@dimen/content_fragment_loader_button_imapge_left"
                android:paddingRight="@dimen/content_fragment_loader_button_imapge_right"
                android:singleLine="true"
                android:text="@string/preference_language_1"
                android:textColor="@color/intro_main_text"
                android:textSize="@dimen/dialog_content_margin_text_size_title" />

            <Button
                android:id="@+id/date_born"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/loader_buttons_margin"
                android:layout_marginRight="@dimen/loader_buttons_margin"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_custom_half"
                android:drawableLeft="@drawable/ic_icon_settings_date_born"
                android:ellipsize="end"
                android:paddingLeft="@dimen/content_fragment_loader_button_imapge_left"
                android:paddingRight="@dimen/content_fragment_loader_button_imapge_right"
                android:singleLine="true"
                android:text="@string/preference_date_1"
                android:textColor="@color/intro_main_text"
                android:textSize="@dimen/dialog_content_margin_text_size_title" />

            <Button
                android:id="@+id/zodiac_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/loader_buttons_margin"
                android:layout_marginRight="@dimen/loader_buttons_margin"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_custom_half"
                android:drawableLeft="@drawable/ic_icon_settings_sign"
                android:ellipsize="end"
                android:paddingLeft="@dimen/content_fragment_loader_button_imapge_left"
                android:paddingRight="@dimen/content_fragment_loader_button_imapge_right"
                android:singleLine="true"
                android:text="@string/preference_zodiac_sign_1"
                android:textColor="@color/intro_main_text"
                android:textSize="@dimen/dialog_content_margin_text_size_title" />

            <TextView
                android:id="@+id/subTitle_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/loader_buttons_margin"
                android:layout_marginRight="@dimen/loader_buttons_margin"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:lines="3"
                android:minLines="3"
                android:text="@string/preference_date_set"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/intro_second_text"
                android:textSize="15sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="@dimen/loader_buttons_margin"
                android:layout_marginRight="@dimen/loader_buttons_margin"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_custom_half"
                android:ellipsize="end"
                android:paddingLeft="@dimen/content_fragment_loader_error_button_padding"
                android:paddingRight="@dimen/content_fragment_loader_error_button_padding"
                android:singleLine="true"
                android:text="@string/start"
                android:textColor="@color/intro_main_text"
                android:textSize="@dimen/dialog_content_margin_text_size_title"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>