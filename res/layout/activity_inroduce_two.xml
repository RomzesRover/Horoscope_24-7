<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hexography_green" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/preference_name_2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/not_simple_white_color" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:text="@string/preference_name_1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/simple_white_color"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fragment_standart_padding" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/fragment_standart_padding"
                android:background="@drawable/list_selector_holo_dark"
                android:text="@string/introduce_back" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_holo_dark"
                android:padding="@dimen/fragment_standart_padding"
                android:text="@string/introduce_next" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_above="@+id/linearLayout1"
            android:layout_marginBottom="3dp"
            android:src="@color/slider_menu_custom_text_color" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/fragment_standart_padding"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/default_name"
            android:textColor="@color/not_simple_white_color" >

        </EditText>

    </RelativeLayout>

</RelativeLayout>